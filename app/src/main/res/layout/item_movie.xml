<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="#26FF9166"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivMoviePoster"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:background="@drawable/cart_top_cut" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:background="@drawable/cart_bottom_cut" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".05"
                    android:contentDescription="TODO"
                    android:src="@drawable/movie_app_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    tools:ignore="RtlSymmetry">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvMovieTitle"
                        style="@style/h2_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        tools:text="title" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_move_overview"
                        style="@style/p_normal_colored"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:maxLines="3"
                        tools:ignore="NestedWeights"
                        tools:text="title" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|end">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_4"
                            android:gravity="center|end"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_10sdp"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_star_full"
                                app:tint="@color/yellow" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvMoveRate"
                                style="@style/h3_normal_colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/yellow"
                                tools:text="title" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>